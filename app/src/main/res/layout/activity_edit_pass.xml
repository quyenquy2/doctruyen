<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainUpdatepass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Đổi Mật khẩu"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/tv_username2"
        android:enabled="false"
        android:drawableRight="@drawable/ic_taikhoan"
        android:hint="Tài Khoản"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/edt_pass"
        android:drawableRight="@drawable/ic_matkhau"
        android:hint="Mật Khẩu cũ"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"></EditText>

    <EditText
        android:id="@+id/edt_mkmoi"
        android:drawableRight="@drawable/ic_email"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/edt_xnmk"
        android:drawableRight="@drawable/ic_email"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"></EditText>
    <Button
        android:id="@+id/btn_updatepass"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Cập Nhật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
</LinearLayout>






