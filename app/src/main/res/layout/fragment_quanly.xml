<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".model.main.MainAdmin">
        <Button
            android:layout_gravity="center"
            android:id="@+id/buttonAddTruyen"
            android:text="Thêm truyện"
            android:textColor="@color/white"
            android:background="@drawable/themtruyen"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
        </Button>
        <EditText
            android:id="@+id/edt_ttr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_boder"
            android:hint="   Nhập tiêu đề"
            android:textColor="@color/Black"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listviewAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>